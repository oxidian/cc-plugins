{
  "description": "Code quality hooks â€” PreToolUse guards, PostToolUse auto-format, Stop checks",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/ban_redundant_cd.py",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Bash|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/ban_custom_debug.py",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/ban_lint_suppressions.py",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/run_if_changed.py --project-dir $CLAUDE_PROJECT_DIR --action fast",
            "timeout": 30
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/run_if_changed.py --project-dir $CLAUDE_PROJECT_DIR --action slow",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
